@{
    ViewData["Title"] = "Update";
}
@model OgrenciUpdateWithDersDto
<h1>Update Ogrenci</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Update" asp-controller="Ogrenci" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Adi"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyadi"></label>
                <input asp-for="Soyadi" class="form-control" />
                <span asp-validation-for="Soyadi" class="text-danger"></span>
            </div>
            <div class="form-group" >
                @for (int i = 0; i < Model.Dersler.Count; i++)
                {
                    <input type="checkbox" asp-for="@Model.Dersler[i].Checked" checked="@Model.Dersler[i].Checked" />
                    <label for="chk_@Model.Dersler[i].Adi">@Model.Dersler[i].Adi</label>
                    <br>
                    @Html.HiddenFor(x => @Model.Dersler[i].Id)
                    @Html.HiddenFor(y => @Model.Dersler[i].Adi)
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
